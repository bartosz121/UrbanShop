<div class="h-full flex flex-col bg-white shadow-xl overflow-hidden">
    <div class="flex-1 py-6 overflow-y-auto px-4 sm:px-6">
        <div class="">
            <h2 class="text-lg font-medium text-gray-900" id="slide-over-title">Your cart</h2>
        </div>

        <div class="mt-8">
            <div class="flow-root">
                <ul role="list" class="max-h-80 -my-6 divide-y divide-gray-200 overflow-y-auto">
                    <template x-for="cartItem in $store.cart.items" :key="cartItem.id">
                        <li x-on:click="document.location.pathname='/Shop/Product/' + cartItem.productId" class="px-3 py-6 flex hover:bg-gray-300 hover:bg-opacity-10 cursor-pointer">
                            <div class="flex-shrink-0 self-center w-16 h-16 border border-gray-200 rounded-md overflow-hidden">
                                <img :src="cartItem.productThumbnail" :alt="cartItem.productName" class="w-full h-full object-center object-cover">
                            </div>
                            <div class="mx-2 w-32 flex flex-1 flex-col justify-center font-bold text-gray-900">
                                <h3>
                                    <p x-text="cartItem.productName"></p>
                                </h3>
                                <p class="text-gray-500 text-gray-400 text-xs font-normal" x-text="'x' + cartItem.quantity"></p>
                            </div>
                            <div class="flex flex-col items-end self-center">
                                <p x-text="'$' + Number.parseFloat(cartItem.totalPrice).toFixed(2)"></p>
                                <p x-show="cartItem.quantity > 1" x-text="'$' + Number.parseFloat(cartItem.price).toFixed(2)" class="text-gray-400 text-xs font-normal"></p>
                            </div>
                        </li>
                    </template>
                </ul>
            </div>
        </div>
    </div>

    <div class="border-t border-gray-200 py-6 px-4 sm:px-6">
        <div class="flex justify-between text-base font-medium text-gray-900">
            <p>Total</p>
            <p x-text="'$' + $store.cart.getPriceTotal()" class="font-bold"></p>
        </div>
        <div class="mt-6">
            <a asp-controller="Shop" asp-action="Cart" class="block text-center px-8 py-3 border border-gray-300 uppercase no-underline hover:border-gray-500 hover:text-black hover:underline hover:bg-gray-400 hover:bg-opacity-5 transition ease-in-out">See Cart</a>
        </div>
    </div>
</div>