@model UrbanShop.ViewModels.ProductImageViewModel

@{
    ViewData["Title"] = "ProductImage - Create";
}

<div class="container mx-auto">
    <div class="text-3xl text-center mx-auto">
        Create Product Image
    </div>

    <hr class="mb-4" />


    <div class="my-4">
        <form asp-action="Create" enctype="multipart/form-data" asp-controller="ProductImages">
            <div class="sm:w-1/2 border border-gray-300 border-opacity-40 sm:shadow-lg sm:rounded-sm mx-auto">
                <div class="p-4 sm:p-16">
                    <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
                    <div class="form-group">
                        <label asp-for="Images" class="block w-11/12 sm:w-1/2 mx-auto font-bold text-gray-700"></label>
                        <input asp-for="Images" multiple autocomplete="off" class="m-2 p-2 sm:mx-auto border border-gray-300 focus:border-gray-500 focus:ring-gray-500 rounded-md focus:outline-none block w-11/12 sm:w-1/2 shadow-sm sm:text-sm" />
                        <span asp-validation-for="Images" class="text-red-500"></span>
                    </div>

                    <div class="">
                        <label asp-for="ProductId" class="block w-11/12 sm:w-1/2 mx-auto font-bold text-gray-700">Product</label>
                        <select asp-for="ProductId" asp-items="@ViewBag.ProductId" class="m-2 p-2 sm:mx-auto border focus:border-gray-500 border-gray-300 rounded-md focus:outline-none block w-11/12 sm:w-1/2 shadow-sm sm:text-sm">
                            <option>Select Product</option>
                        </select>
                        <span asp-validation-for="ProductId" class="text-red-500"></span>
                    </div>
                    <div class="py-4 w-3/4 mx-auto">
                        <button type="submit" class="py-2 px-4 w-full cursor-pointer border border-gray-500 shadow-sm font-medium rounded-md hover:bg-gray-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">Create</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="container mx-auto py-6 flex flex-row gap-4 justify-center items-center">
        <vc:asp-route-btn controller="ProductImages" action="Index" wrap-class="index-btn" btn-text="Back to List" />
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
