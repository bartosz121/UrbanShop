@model UrbanShop.Models.Category

@{
    ViewData["Title"] = "Category - Details";
}
<div class="container mx-auto">
    <div class="text-3xl text-center mx-auto">
        Category Details
    </div>

    <hr class="mb-4" />


    <div class="my-4">
        <div class="sm:w-1/2 border border-gray-300 border-opacity-40 sm:shadow-lg sm:rounded-sm mx-auto">
            <div class="p-4 sm:p-16 text-center">
                <div class="mb-4 border-b border-gray-300 border-opacity-40">
                    <span class="block w-11/12 sm:w-1/2 mx-auto font-bold text-gray-700">@Html.DisplayNameFor(model => model.Name)</span>
                    <span class="block w-11/12 sm:w-1/2 mx-auto text-gray-700">@Html.DisplayFor(model => model.Name)</span>
                </div>
                <div class="mb-4 border-b border-gray-300 border-opacity-40">
                    <span class="block w-11/12 sm:w-1/2 mx-auto font-bold text-gray-700">@Html.DisplayNameFor(model => model.DisplayName)</span>
                    <span class="block w-11/12 sm:w-1/2 mx-auto text-gray-700">@Html.DisplayFor(model => model.DisplayName)</span>
                </div>
                <div class="mb-4 border-b border-gray-300 border-opacity-40">
                    <span class="block w-11/12 sm:w-1/2 mx-auto font-bold text-gray-700">@Html.DisplayNameFor(model => model.IsVisible)</span>
                    <span class="block w-11/12 sm:w-1/2 mx-auto text-gray-700">@Html.DisplayFor(model => model.IsVisible)</span>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mb-4 flex flex-row justify-center gap-4">
        <div class="border border-gray-300 hover:border-gray-500 transition ease-in-out">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="inline-block py-2 px-4 uppercase no-underline hover:text-black hover:underline hover:bg-gray-400 hover:bg-opacity-5">Edit</a>
        </div>
        <div class="border border-gray-300 hover:border-gray-500 transition ease-in-out">
            <a asp-action="Index" asp-controller="Products" asp-route-searchBy="category" asp-route-searchInput="@Model.Name" class="inline-block py-2 px-4 uppercase no-underline hover:text-black hover:underline hover:bg-gray-400 hover:bg-opacity-5">Category Products</a>
        </div>
        <vc:asp-route-btn controller="Categories" action="Index" wrap-class="index-btn" btn-text="Back to List" />
    </div>
</div>
