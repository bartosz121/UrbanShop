@model IEnumerable<UrbanShop.Models.Product>

@{
    ViewData["Title"] = "Product - Index";
}

<div class="w-full text-center py-6">
    <div class="text-2xl text-center mx-auto inline-block">Products</div>
    <div class="container mx-auto py-6 flex flex-row gap-4 justify-center items-center">
        <vc:asp-route-btn controller="Products" action="Create" wrap-class="create-btn" btn-text="Create" />
    </div>

    <form method="GET" class="my-6">
        <div class="w-1/2 mx-auto">
            <label for="filter-select">Filter by</label>
            <select id="filter-select" name="searchBy" class="m-2 p-2 w-1/2 md:w-2/5 mx-auto border focus:border-gray-500 border-gray-300 rounded-md focus:outline-none block shadow-sm sm:text-sm">
                <option value="name">Name</option>
                <option value="category">Category</option>
            </select>
        </div>
        <div class="w-full sm:w-1/2 mx-auto flex flex-row justify-center items-center">
            <input type="text" name="searchInput" autocomplete="off" class="m-2 w-1/2 md:w-1/5 p-2 border border-gray-300 focus:border-gray-500 focus:ring-gray-500 rounded-md focus:outline-none block shadow-sm sm:text-sm" placeholder="Filter by ..." />
            <button type="submit" class="my-2 py-2 px-6 inline-block border border-black">Search</button>
        </div>
    </form>

    <table class="table-auto md:p-6 mx-auto border-separate border border-gray-600">
        <thead>
            <tr>
                <th class="bg-gray-300 border border-gray-600">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="bg-gray-300 border border-gray-600">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th class="bg-gray-300 border border-gray-600">
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th class="bg-gray-300 border border-gray-600">
                    @Html.DisplayNameFor(model => model.IsVisible)
                </th>
                <th class="bg-gray-300 border border-gray-600">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="break-all">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="break-all">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td class="break-all">
                        @Html.DisplayFor(modelItem => item.Category.DisplayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsVisible)
                    </td>
                    <td>
                        <a asp-controller="Shop" asp-action="Product" asp-route-id="@item.Id">Product page</a> |
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
