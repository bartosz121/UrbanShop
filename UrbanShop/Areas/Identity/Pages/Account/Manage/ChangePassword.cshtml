@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="text-lg text-center mx-auto">
    @ViewData["Title"]
</div>
<partial name="_CustomStatusMessage" model="Model.StatusMessage" />

<div class="my-2">
    <form id="email-form" method="post">
        <div asp-validation-summary="All" class="w-full my-4 text-center font-bold text-red-500"></div>
        <div class="form-group">
            <label asp-for="Input.OldPassword" class="block w-11/12 sm:w-1/2 mx-auto font-bold text-gray-700"></label>
            <input asp-for="Input.OldPassword" class="m-2 p-2 sm:mx-auto border border-gray-300 focus:border-gray-500 focus:ring-gray-500 rounded-md focus:outline-none block w-11/12 sm:w-1/2 shadow-sm sm:text-sm" />
            <div class="w-full text-center font-bold">
                <span asp-validation-for="Input.OldPassword" class="my-2 text-red-500"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Input.NewPassword" class="block w-11/12 sm:w-1/2 mx-auto font-bold text-gray-700"></label>
            <input asp-for="Input.NewPassword" class="m-2 p-2 sm:mx-auto border border-gray-300 focus:border-gray-500 focus:ring-gray-500 rounded-md focus:outline-none block w-11/12 sm:w-1/2 shadow-sm sm:text-sm" />
            <div class="w-full text-center font-bold">
                <span asp-validation-for="Input.NewPassword" class="my-2 text-red-500"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword" class="block w-11/12 sm:w-1/2 mx-auto font-bold text-gray-700"></label>
            <input asp-for="Input.ConfirmPassword" class="m-2 p-2 sm:mx-auto border border-gray-300 focus:border-gray-500 focus:ring-gray-500 rounded-md focus:outline-none block w-11/12 sm:w-1/2 shadow-sm sm:text-sm" />
            <div class="w-full text-center font-bold">
                <span asp-validation-for="Input.ConfirmPassword" class="my-2 text-red-500"></span>
            </div>
        </div>
        <div class="w-3/4 py-3 mx-auto">
            <button type="submit" class="w-full py-3 uppercase no-underline border border-gray-300 hover:border-gray-500 hover:text-black hover:underline hover:bg-gray-400 hover:bg-opacity-5 transition ease-in-out">Update Password</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}