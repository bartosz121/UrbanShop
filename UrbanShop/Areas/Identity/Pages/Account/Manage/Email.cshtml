@page
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="text-lg text-center mx-auto">
    @ViewData["Title"]
</div>
<partial name="_CustomStatusMessage" model="Model.StatusMessage" />

<hr class="w-3/4 mx-auto" />
<div class="my-2">
    <form id="email-form" method="post">
        <div asp-validation-summary="All" class="w-full my-4 text-center font-bold text-red-500"></div>
        <div class="form-group">
            <label asp-for="Email" class="block w-11/12 sm:w-1/2 mx-auto font-bold text-gray-700"></label>
            <div class="input-group">
                <input asp-for="Email" class="m-2 p-2 sm:mx-auto text-gray-400 border border-gray-300 focus:border-gray-500 focus:ring-gray-500 rounded-md focus:outline-none block w-11/12 sm:w-1/2 shadow-sm sm:text-sm" disabled />
            @if (Model.IsEmailConfirmed)
            {
                <div class="input-group-append">
                    <span class="text-green-900 font-bold">✓</span>
                </div>
            }
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Input.NewEmail" class="block w-11/12 sm:w-1/2 mx-auto font-bold text-gray-700"></label>
            <input asp-for="Input.NewEmail" class="m-2 p-2 sm:mx-auto border border-gray-300 focus:border-gray-500 focus:ring-gray-500 rounded-md focus:outline-none block w-11/12 sm:w-1/2 shadow-sm sm:text-sm" />
            <div class="w-full text-center font-bold">
                <span asp-validation-for="Input.NewEmail" class="my-2 text-red-500"></span>
            </div>
        </div>
        <div class="w-3/4 py-3 mx-auto">
            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="w-full py-3 uppercase no-underline border border-gray-300 hover:border-gray-500 hover:text-black hover:underline hover:bg-gray-400 hover:bg-opacity-5 transition ease-in-out">Change email</button>
        </div>

        @if (!Model.IsEmailConfirmed)
        {
            <hr class="w-3/4 py-4 mx-auto" />
            <div class="w-3/4 py-3 mx-auto">
                <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="w-full py-2 no-underline border border-gray-300 hover:border-gray-500 hover:text-black hover:underline hover:bg-gray-400 hover:bg-opacity-5 transition ease-in-out">Send verification email</button>
            </div>

        }
    </form>
</div>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
