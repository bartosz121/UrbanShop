@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<div class="container mx-auto">
    <div class="text-3xl text-center mx-auto">
        <p>@ViewData["Title"]</p>
    </div>

    <hr class="my-4" />

    <div class="my-4">
        <form method="post">
            <div class="sm:w-1/2 border border-gray-300 border-opacity-40 sm:shadow-lg sm:rounded-sm mx-auto">
                <div class="p-4 sm:p-16">
                    <div class="text-lg text-center mx-auto">
                        <p>Enter your email</p>
                    </div>
                    <div asp-validation-summary="All" class="w-full my-4 text-center font-bold"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email" class="block w-11/12 sm:w-1/2 mx-auto font-bold text-gray-700"></label>
                        <input asp-for="Input.Email" class="m-2 p-2 sm:mx-auto border border-gray-300 focus:border-gray-500 focus:ring-gray-500 rounded-md focus:outline-none block w-11/12 sm:w-1/2 shadow-sm sm:text-sm" />
                        <div class="w-full text-center font-bold">
                            <span asp-validation-for="Input.Email" class="my-2 text-red-500"></span>
                        </div>
                    </div>
                    <div class="w-3/4 py-3 mx-auto">
                        <button type="submit" class="w-full py-3 uppercase no-underline border border-gray-300 hover:border-gray-500 hover:text-black hover:underline hover:bg-gray-400 hover:bg-opacity-5 transition ease-in-out">Resend</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
